import java.io.*;
import java.net.*;
import java.util.ArrayList;
import java.util.List;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class MathServer {

    /**
     * @param args the command line arguments
     */

   
    public static void main(String[] args) throws IOException {
        // TODO code application logic here

        ServerSocket  socket = null;
        Socket connection = null;

        int port = 1234;       
        socket = new ServerSocket(port);
        System.out.println("Socket created on port: "+port);
        while(true){
            connection = socket.accept();
            System.out.println("Waiting for connections....");
            System.out.println("Accepted new connection on port "+connection.getPort()+".\nClient's IP is: "+connection.getInetAddress().getHostAddress());
            HandleClient client = new HandleClient(connection);
            client.start();    
        }//end while true
       
    }
    
   
}
